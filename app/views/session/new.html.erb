<div class="col-md-6 col-md-offset-3">

<% if flash[:notice].present? %>
<%= flash[:notice] %>
<% end %>

<%= form_tag '/login', :class=>"form-group" do %>

  <%= label_tag 'email' %>
  <%= text_field_tag 'email', nil, :autofocust => true, :class => "form-control" %>

  <%= label_tag 'password' %>
  <%= password_field_tag 'password', :class => "form-control" %>

  <%= submit_tag 'Login', :class => 'submit', :class=>"btn btn-default" %>
<% end %>
</div>