<% if flash[:notice].present? %>
<%= flash[:notice] %>
<% end %>

<%= form_tag '/login' do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'email', nil, :autofocust => true %>

  <%= label_tag 'password' %>
  <%= password_field_tag 'password' %>

  <%= submit_tag 'Login', :class => 'submit' %>
<% end %>
