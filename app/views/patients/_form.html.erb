<%= form_for @patient do |f| %>

  <div>
    <%= f.label :title, "Title: " %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :f_name, "First Name: " %>
    <%= f.text_field :f_name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :m_name, "Middle Name: " %>
    <%= f.text_field :m_name %>
  </div>
  <div>
    <%= f.label :l_name, "Last Name: " %>
    <%= f.text_field :l_name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :address, "Address (street, city, state):"%>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :postcode, "Postcode: "%>
    <%= f.text_field :postcode %>
  </div>
  <div>
    <%= f.label :phone, "Phone number: " %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :mobile, "Mobile number: " %>
    <%= f.text_field :mobile %>
  </div>
  <div>
    <%= f.label :dob, "Date of Birth: "%>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
  </div>
  <div>
    <%= f.label :occupation, "Occupation: " %>
    <%= f.text_field :occupation %>
  </div>

    <%= f.submit :type => "submit" %>
<% end %>