<div class="col-md-6 col-md-offset-3">
<%= form_for @practitioner, :class => "form-group" do |f| %>

  <div>
    <%= f.label :name, "Practitioner Name: " %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :phone, "Contact number: " %>
    <%= f.text_field :phone, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :email, "e-mail: "%>
    <%= f.email_field :email, :autofocus => true, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :password, "Password: " %>
    <%= f.text_field :password, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Password confirmation: " %>
    <%= f.text_field :password_confirmation, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :abn_number, "ABN #: " %>
    <%= f.text_field :abn_number, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :address, "Address: " %>
    <%= f.text_field :address, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :postcode, "Post code: " %>
    <%= f.text_field :postcode, :class => "form-control" %>
  </div>

    <%= f.submit :type => "submit", :class=>"btn btn-default" %>
<% end %>
</div>